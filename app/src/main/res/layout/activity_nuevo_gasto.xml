<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoGasto">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="93dp"
        android:background="@color/app_primary"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:contentDescription="@string/nav_header_desc"
            app:srcCompat="@drawable/app_logo" />

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="900dp"
        android:background="@drawable/layout_top_rounded"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="154dp" />

    <EditText
        android:id="@+id/idTextDetalle"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="textPersonName"
        android:text="Detalle*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="481dp" />

    <EditText
        android:id="@+id/editTextTextPersonNombre7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="textPersonName"
        android:text="Link de cancelacion*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="620dp" />

    <EditText
        android:id="@+id/editTextTextPersonNombre6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="date"
        android:text="Fecha de proximo pago*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="566dp" />

    <EditText
        android:id="@+id/idTextTipoDeCargo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="textPersonName"
        android:text="Tipo de cargo*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="425dp" />

    <EditText
        android:id="@+id/idTextCategoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="textPersonName"
        android:text="Categoria*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="369dp" />

    <EditText
        android:id="@+id/idTextMonto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="textPersonName"
        android:text="Monto*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="319dp" />

    <EditText
        android:id="@+id/idTextNombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/lekton"
        android:inputType="textPersonName"
        android:text="Nombre*"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/textViewNuevoGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Gasto"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/Agregar_NuevoCargo_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:width="200dp"
        android:height="55dp"
        android:backgroundTint="#FFFFFF"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="Agregar"
        android:textColor="#645CA9"
        app:cornerRadius="50dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>