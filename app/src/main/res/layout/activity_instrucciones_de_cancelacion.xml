<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_left_rounded"
            tools:context=".OnboardingSecond">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/lekton"
                android:gravity="center"
                android:text="Sigue estas intrucciones para dar de baja:"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewInstrucciones"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lekton"
                android:gravity="center|left"
                android:text="1. Ingresa a la web www.tuwebapp.com.
                2. Inicia sesion con tu usuario y contraseña.
                    3.En el menu de usuario ingresa a “Mi cuenta”.
                        4. Ingresa a suscripciones activas.
                        5. Selecciona la suscripcion que quieres dar de baja.
                        6. Se mostrara un detalle de la suscripcion seleccionada, en la parte inferior presiona “Dar de baja”.
                            7. Confirma la baja.
                            8. Recibiras un mail con la confirmacion. "
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/IrALaWeb_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />

            <Button
                android:id="@+id/IrALaWeb_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:width="200dp"
                android:height="55dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/lekton"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="Ir a la web"
                android:textColor="#645CA9"
                android:textSize="22dp"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewInstrucciones" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/app_primary"
            android:clickable="false" />

    </LinearLayout>
</ScrollView>