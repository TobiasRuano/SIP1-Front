        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_third_text2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="209dp"
